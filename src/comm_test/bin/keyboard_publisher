#!/usr/bin/env python

import pygame, sys
import pygame.locals
import rospy
from std_msgs.msg import Int32

pygame.init()
BLACK = (0,0,0)
WIDTH = 1280
HEIGHT = 1024
windowSurface = pygame.display.set_mode((WIDTH, HEIGHT), 0, 32)

windowSurface.fill(BLACK)

pub_down = rospy.Publisher('keydown_pub', Int32, queue_size=10)
pub_up = rospy.Publisher('keyup_pub', Int32, queue_size=10)
rospy.init_node('keyboard_publisher')

dict_values = {
    119: 1,
    97: 2,
    115: 3,
    100: 4
}

while True:
    for event in pygame.event.get():
        try:
            if event.key in dict_values.keys():
                try:
                    if event.unicode: 
                        pub_down.publish(dict_values[event.key])
                        rospy.loginfo("keydown "+str(event.key)+" "+str(dict_values[event.key]))
                except:
                    pub_up.publish(dict_values[event.key])
                    rospy.loginfo("keyup "+str(event.key)+" "+str(dict_values[event.key]))

        except:
            pass

        if event.type == pygame.locals.QUIT:
             pygame.quit()
             sys.exit()